@model IndustrialSolutions.Models.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="page-content">
    <section class="section-padding" style="margin-top: 80px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center mb-5">
                    <h2 class="section-title" data-aos="fade-up">Contact Us</h2>
                    <p class="lead" data-aos="fade-up" data-aos-delay="100">
                        Get in touch with our team for all your industrial tool requirements
                    </p>
                </div>
            </div>

            @if (TempData["Message"] != null)
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-lg-8 mb-4">
                    <div class="contact-form" data-aos="fade-right">
                        <h4 class="mb-4"><i class="fas fa-envelope me-2"></i>Send us a Message</h4>

                        <form asp-action="Contact" method="post" id="contactForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FullName" class="form-label"></label>
                                    <input asp-for="FullName" class="form-control" placeholder="Enter your full name">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter your email address">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="GSTNumber" class="form-label"></label>
                                    <input asp-for="GSTNumber" class="form-control" placeholder="e.g., 22AAAAA0000A1Z5">
                                    <span asp-validation-for="GSTNumber" class="text-danger"></span>
                                    <small class="form-text text-muted">Optional - for business customers</small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Company" class="form-label"></label>
                                <input asp-for="Company" class="form-control" placeholder="Enter your company name">
                                <span asp-validation-for="Company" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Subject" class="form-label">Subject *</label>
                                <select asp-for="Subject" class="form-control">
                                    <option value="">Select Subject</option>
                                    <option value="product-inquiry">Product Inquiry</option>
                                    <option value="bulk-order">Bulk Order</option>
                                    <option value="technical-support">Technical Support</option>
                                    <option value="partnership">Partnership Opportunity</option>
                                    <option value="warranty">Warranty Claim</option>
                                    <option value="other">Other</option>
                                </select>
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Message" class="form-label"></label>
                                <textarea asp-for="Message" class="form-control" rows="5" placeholder="Please describe your requirements in detail..."></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-submit btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Send Message
                            </button>
                        </form>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="contact-info" data-aos="fade-left">
                        <h4 class="mb-4"><i class="fas fa-info-circle me-2"></i>Get in Touch</h4>

                        <div class="contact-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <strong>Address</strong><br>
                                Industrial Solutions Pvt. Ltd.<br>
                                Sector 45, Industrial Area<br>
                                Bengaluru, Karnataka 560078<br>
                                India
                            </div>
                        </div>

                        <div class="contact-item">
                            <i class="fas fa-phone"></i>
                            <div>
                                <strong>Phone</strong><br>
                                <a href="tel:+918023456789" class="text-white text-decoration-none">+91 80 2345 6789</a><br>
                                <a href="tel:+918023456790" class="text-white text-decoration-none">+91 80 2345 6790</a>
                            </div>
                        </div>

                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <div>
                                <strong>Email</strong><br>
                                <a href="mailto:info@industrialsolutions.com" class="text-white text-decoration-none">info@industrialsolutions.com</a><br>
                                <a href="mailto:sales@industrialsolutions.com" class="text-white text-decoration-none">sales@industrialsolutions.com</a>
                            </div>
                        </div>

                        <div class="contact-item">
                            <i class="fas fa-clock"></i>
                            <div>
                                <strong>Business Hours</strong><br>
                                Mon - Fri: 9:00 AM - 6:00 PM<br>
                                Sat: 9:00 AM - 2:00 PM<br>
                                Sun: Closed
                            </div>
                        </div>

                        <div class="contact-item">
                            <i class="fas fa-headset"></i>
                            <div>
                                <strong>24/7 Support</strong><br>
                                Emergency Technical Support<br>
                                <a href="tel:+919876543210" class="text-white text-decoration-none">+91 98765 43210</a>
                            </div>
                        </div>

                        <div class="mt-4">
                            <h5><i class="fas fa-share-alt me-2"></i>Follow Us</h5>
                            <div class="social-links">
                                <a href="#" title="Facebook" target="_blank"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" title="Twitter" target="_blank"><i class="fab fa-twitter"></i></a>
                                <a href="#" title="LinkedIn" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                                <a href="#" title="Instagram" target="_blank"><i class="fab fa-instagram"></i></a>
                                <a href="#" title="YouTube" target="_blank"><i class="fab fa-youtube"></i></a>
                            </div>
                        </div>

                        <!-- Quick Contact Cards -->
                        <div class="mt-4">
                            <div class="quick-contact-card mb-2">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-shopping-cart text-warning me-3"></i>
                                    <div>
                                        <strong>Sales Inquiry</strong><br>
                                        <small>Get quotes and product information</small>
                                    </div>
                                </div>
                            </div>
                            <div class="quick-contact-card mb-2">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-tools text-info me-3"></i>
                                    <div>
                                        <strong>Technical Support</strong><br>
                                        <small>Product installation and troubleshooting</small>
                                    </div>
                                </div>
                            </div>
                            <div class="quick-contact-card">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-handshake text-success me-3"></i>
                                    <div>
                                        <strong>Partnership</strong><br>
                                        <small>Dealer and distributor opportunities</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Map Section -->
            <div class="row mt-5">
                <div class="col-lg-12">
                    <h4 class="text-center mb-4">Find Us</h4>
                    <div class="map-container" data-aos="fade-up" style="height: 400px; border-radius: 15px; overflow: hidden;">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3888.0!2d77.6!3d12.97!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTLCsDU4JzEyLjAiTiA3N8KwMzYnMDAuMCJF!5e0!3m2!1sen!2sin!4v1635000000000!5m2!1sen!2sin"
                                width="100%"
                                height="400"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy">
                        </iframe>
                    </div>
                    <div class="text-center mt-3">
                        <p class="text-muted">
                            <i class="fas fa-directions me-2"></i>
                            <a href="https://maps.google.com/?q=Industrial+Solutions+Bengaluru" target="_blank" class="text-primary text-decoration-none">
                                Get Directions to Our Office
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="row mt-5">
                <div class="col-lg-12">
                    <h4 class="text-center mb-4">Frequently Asked Questions</h4>
                    <div class="row">
                        <div class="col-lg-6 mb-4" data-aos="fade-up" data-aos-delay="100">
                            <div class="faq-item">
                                <h6><i class="fas fa-question-circle text-primary me-2"></i>What is your minimum order quantity?</h6>
                                <p class="text-muted">We accept orders of all sizes, from single items to bulk quantities. No minimum order requirement.</p>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-4" data-aos="fade-up" data-aos-delay="200">
                            <div class="faq-item">
                                <h6><i class="fas fa-question-circle text-primary me-2"></i>Do you provide international shipping?</h6>
                                <p class="text-muted">Yes, we ship worldwide. Shipping costs and delivery times vary by location.</p>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-4" data-aos="fade-up" data-aos-delay="300">
                            <div class="faq-item">
                                <h6><i class="fas fa-question-circle text-primary me-2"></i>What warranty do you offer?</h6>
                                <p class="text-muted">All our products come with manufacturer warranty ranging from 1-3 years depending on the product category.</p>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-4" data-aos="fade-up" data-aos-delay="400">
                            <div class="faq-item">
                                <h6><i class="fas fa-question-circle text-primary me-2"></i>Do you offer technical training?</h6>
                                <p class="text-muted">Yes, we provide comprehensive technical training and product demonstrations for our customers.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Form validation and enhancement
        document.getElementById('contactForm').addEventListener('submit', function (e) {
            const submitButton = this.querySelector('button[type="submit"]');
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending...';
            submitButton.disabled = true;
        });

        // GST Number formatting
        document.getElementById('GSTNumber').addEventListener('input', function (e) {
            let value = e.target.value.toUpperCase();
            e.target.value = value;
        });

        // Phone number formatting
        document.getElementById('PhoneNumber').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 10) {
                value = value.substring(0, 10);
            }
            e.target.value = value;
        });
    </script>
}