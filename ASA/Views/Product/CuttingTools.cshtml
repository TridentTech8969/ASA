@{
    ViewData["Title"] = "Cutting Tools";
}

<div class="page-content">
    <section class="section-padding" style="margin-top: 80px;">
        <div class="container">
            <!-- Header Section -->
            <div class="row">
                <div class="col-lg-12 text-center mb-5">
                    <h2 class="section-title" data-aos="fade-up">Cutting Tools</h2>
                    <p class="lead" data-aos="fade-up" data-aos-delay="100">
                        Precision cutting tools and blades for metal, wood, and composite materials built for accuracy and longevity
                    </p>
                </div>
            </div>

            <!-- Hero Image Section -->
            <div class="row mb-5">
                <div class="col-lg-12" data-aos="fade-up">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1581092334651-ddf26d9a09d0?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80"
                             alt="Cutting Tools Collection"
                             class="img-fluid rounded shadow-lg w-100"
                             style="height: 400px; object-fit: cover;">
                        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
                             style="background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)); border-radius: 0.5rem;">
                            <div class="text-center text-white">
                                <h3 class="display-5 fw-bold mb-3">Precision Cutting Solutions</h3>
                                <p class="fs-5">Engineered for accuracy and long-lasting performance</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Description -->
            <div class="row mb-5">
                <div class="col-lg-8 mx-auto text-center" data-aos="fade-up">
                    <p class="lead mb-4">
                        Our cutting tools are manufactured using premium materials and advanced coating technologies to deliver
                        exceptional cutting performance, extended tool life, and superior surface finishes across a wide range of applications.
                    </p>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="row">
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="100">
                        <img src="https://images.unsplash.com/photo-1609269034324-1f16e69b8a6e?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Carbide End Mills" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Carbide End Mills</h5>
                            <p class="card-text">High-performance carbide end mills designed for precision machining of steel, aluminum, and exotic alloys with superior chip evacuation.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Sizes: 1/16" to 2" diameter</li>
                                <li>• TiAlN coated options</li>
                                <li>• 2, 3, and 4 flute designs</li>
                                <li>• Corner radius options</li>
                                <li>• High-speed steel variants</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">Precision</span>
                                <span class="badge bg-success">Coated</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="200">
                        <img src="https://images.unsplash.com/photo-1581092446460-3daab8b8b0b0?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="HSS Drill Bits" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">HSS Drill Bits</h5>
                            <p class="card-text">Premium high-speed steel drill bits offering exceptional drilling performance in various materials with precise hole dimensions.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Sizes: #80 to 1" diameter</li>
                                <li>• Fractional, number, and letter sets</li>
                                <li>• Split point geometry</li>
                                <li>• Metric sizing available</li>
                                <li>• Cobalt steel options</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">High Speed Steel</span>
                                <span class="badge bg-success">Precision Ground</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="300">
                        <img src="https://images.unsplash.com/photo-1609205264944-fa6b3aab9b9f?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Saw Blades" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Saw Blades</h5>
                            <p class="card-text">Professional-grade saw blades for circular saws, band saws, and table saws with optimized tooth geometry for clean cuts.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Carbide-tipped teeth</li>
                                <li>• Various tooth configurations</li>
                                <li>• Anti-vibration slots</li>
                                <li>• Heat-resistant coatings</li>
                                <li>• Laser-cut expansion slots</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">Carbide Tipped</span>
                                <span class="badge bg-success">Anti-Vibration</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="400">
                        <img src="https://images.unsplash.com/photo-1609205264951-b5d5280cd1cb?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Router Bits" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Router Bits</h5>
                            <p class="card-text">Precision router bits for woodworking and laminate applications featuring carbide cutting edges and balanced designs for smooth operation.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Straight, flush trim, and profile bits</li>
                                <li>• 1/4" and 1/2" shank sizes</li>
                                <li>• Carbide cutting edges</li>
                                <li>• Ball bearing guides</li>
                                <li>• Anti-kickback designs</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">Carbide Edge</span>
                                <span class="badge bg-success">Balanced</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Features Section -->
            <div class="row mt-5">
                <div class="col-lg-12 text-center mb-4">
                    <h3>Why Choose Our Cutting Tools?</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="text-center">
                        <i class="fas fa-gem fa-3x text-primary mb-3"></i>
                        <h5>Premium Materials</h5>
                        <p class="text-muted">Made from high-grade carbide and HSS materials for exceptional durability and performance.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="text-center">
                        <i class="fas fa-bullseye fa-3x text-primary mb-3"></i>
                        <h5>Precision Ground</h5>
                        <p class="text-muted">Computer-controlled grinding ensures consistent geometry and superior cutting accuracy.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="300">
                    <div class="text-center">
                        <i class="fas fa-shield-virus fa-3x text-primary mb-3"></i>
                        <h5>Advanced Coatings</h5>
                        <p class="text-muted">TiAlN and other advanced coatings extend tool life and improve cutting performance.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="400">
                    <div class="text-center">
                        <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                        <h5>Extended Tool Life</h5>
                        <p class="text-muted">Optimized geometries and premium materials deliver longer tool life and reduced replacement costs.</p>
                    </div>
                </div>
            </div>

            <!-- CTA Section -->
            <div class="row mt-5">
                <div class="col-lg-12 text-center">
                    <div class="bg-light p-5 rounded">
                        <h4>Need Custom Cutting Solutions?</h4>
                        <p class="mb-4">Our technical team can help you select the right cutting tools for your specific machining requirements.</p>
                        <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-cogs me-2"></i>Technical Support
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Products" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>