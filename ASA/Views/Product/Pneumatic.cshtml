@{
    ViewData["Title"] = "Pneumatic Tools";
}

<div class="page-content">
    <section class="section-padding" style="margin-top: 80px;">
        <div class="container">
            <!-- Header Section -->
            <div class="row">
                <div class="col-lg-12 text-center mb-5">
                    <h2 class="section-title" data-aos="fade-up">Pneumatic Tools</h2>
                    <p class="lead" data-aos="fade-up" data-aos-delay="100">
                        High-performance pneumatic tools for industrial applications with superior power and reliability
                    </p>
                </div>
            </div>

            <!-- Hero Image Section -->
            <div class="row mb-5">
                <div class="col-lg-12" data-aos="fade-up">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1504307651254-35680f356dfd?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80"
                             alt="Pneumatic Tools Collection"
                             class="img-fluid rounded shadow-lg w-100"
                             style="height: 400px; object-fit: cover;">
                        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
                             style="background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)); border-radius: 0.5rem;">
                            <div class="text-center text-white">
                                <h3 class="display-5 fw-bold mb-3">Professional Pneumatic Solutions</h3>
                                <p class="fs-5">Powered by compressed air for maximum efficiency</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Description -->
            <div class="row mb-5">
                <div class="col-lg-8 mx-auto text-center" data-aos="fade-up">
                    <p class="lead mb-4">
                        Our pneumatic tools are engineered for demanding industrial environments, offering exceptional power-to-weight ratios
                        and consistent performance. These air-powered tools are ideal for continuous operation and heavy-duty applications.
                    </p>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="row">
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="100">
                        <img src="https://images.unsplash.com/photo-1609205264935-73a2a4e7cd1f?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Air Impact Wrenches" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Air Impact Wrenches</h5>
                            <p class="card-text">High-torque pneumatic impact wrenches designed for heavy-duty fastening and loosening applications in automotive and industrial settings.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Torque range: 100-2000 ft-lbs</li>
                                <li>• Lightweight aluminum construction</li>
                                <li>• Adjustable power settings</li>
                                <li>• Quick-change socket adapters</li>
                                <li>• Oil-free operation</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">High Torque</span>
                                <span class="badge bg-success">Professional Grade</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="200">
                        <img src="https://images.unsplash.com/photo-1581092160607-ee22621dd758?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Pneumatic Drills" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Pneumatic Drills</h5>
                            <p class="card-text">Precision pneumatic drills offering consistent speed and power for drilling applications in metal, wood, and composite materials.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Chuck sizes: 1/4" to 1/2"</li>
                                <li>• Variable speed control</li>
                                <li>• Reversible operation</li>
                                <li>• Ergonomic grip design</li>
                                <li>• Low vibration technology</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">Precision</span>
                                <span class="badge bg-success">Variable Speed</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="300">
                        <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Air Compressors" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Air Compressors</h5>
                            <p class="card-text">Industrial air compressors providing reliable compressed air supply for all pneumatic tools and equipment in your facility.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Capacity: 20-200 gallon tanks</li>
                                <li>• Single & dual stage options</li>
                                <li>• Oil-lubricated & oil-free models</li>
                                <li>• Automatic start/stop</li>
                                <li>• Moisture separation systems</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">Industrial Grade</span>
                                <span class="badge bg-success">High Capacity</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="400">
                        <img src="https://images.unsplash.com/photo-1609205264808-d6b0c527b5be?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Pneumatic Sanders" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Pneumatic Sanders</h5>
                            <p class="card-text">Professional pneumatic sanders for surface preparation and finishing work, delivering smooth results with minimal operator fatigue.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Orbital & palm sander options</li>
                                <li>• Dust collection systems</li>
                                <li>• Variable speed control</li>
                                <li>• Quick-change paper system</li>
                                <li>• Lightweight composite housing</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">Smooth Finish</span>
                                <span class="badge bg-success">Dust-Free</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Features Section -->
            <div class="row mt-5">
                <div class="col-lg-12 text-center mb-4">
                    <h3>Why Choose Pneumatic Tools?</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="text-center">
                        <i class="fas fa-weight-hanging fa-3x text-primary mb-3"></i>
                        <h5>Lightweight Design</h5>
                        <p class="text-muted">Superior power-to-weight ratio reduces operator fatigue during extended use.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="text-center">
                        <i class="fas fa-bolt fa-3x text-primary mb-3"></i>
                        <h5>Consistent Power</h5>
                        <p class="text-muted">Maintains consistent torque and speed throughout operation without power loss.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="300">
                    <div class="text-center">
                        <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                        <h5>Safe Operation</h5>
                        <p class="text-muted">No electrical hazards, ideal for wet environments and explosive atmospheres.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="400">
                    <div class="text-center">
                        <i class="fas fa-cog fa-3x text-primary mb-3"></i>
                        <h5>Low Maintenance</h5>
                        <p class="text-muted">Simple design with fewer moving parts reduces maintenance requirements.</p>
                    </div>
                </div>
            </div>

            <!-- CTA Section -->
            <div class="row mt-5">
                <div class="col-lg-12 text-center">
                    <div class="bg-light p-5 rounded">
                        <h4>Need Help Selecting the Right Pneumatic Tools?</h4>
                        <p class="mb-4">Our experts can help you choose the perfect pneumatic solution for your specific application requirements.</p>
                        <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-phone me-2"></i>Get Expert Advice
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Products" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>