@{
    ViewData["Title"] = "Power Tools";
}

<div class="page-content">
    <section class="section-padding" style="margin-top: 80px;">
        <div class="container">
            <!-- Header Section -->
            <div class="row">
                <div class="col-lg-12 text-center mb-5">
                    <h2 class="section-title" data-aos="fade-up">Power Tools</h2>
                    <p class="lead" data-aos="fade-up" data-aos-delay="100">
                        Electric and battery-powered tools designed for heavy-duty industrial use with superior performance
                    </p>
                </div>
            </div>

            <!-- Hero Image Section -->
            <div class="row mb-5">
                <div class="col-lg-12" data-aos="fade-up">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1581092160562-40aa08e78837?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80"
                             alt="Power Tools Collection"
                             class="img-fluid rounded shadow-lg w-100"
                             style="height: 400px; object-fit: cover;">
                        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
                             style="background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)); border-radius: 0.5rem;">
                            <div class="text-center text-white">
                                <h3 class="display-5 fw-bold mb-3">Professional Power Tools</h3>
                                <p class="fs-5">Electric precision for every industrial application</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Description -->
            <div class="row mb-5">
                <div class="col-lg-8 mx-auto text-center" data-aos="fade-up">
                    <p class="lead mb-4">
                        Our comprehensive range of power tools combines cutting-edge technology with robust construction to deliver
                        reliable performance in the most demanding industrial environments. From corded to cordless solutions, we have the right tool for every job.
                    </p>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="row">
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="100">
                        <img src="https://images.unsplash.com/photo-1572981779307-38b8cabb2407?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Electric Drills" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Electric Drills</h5>
                            <p class="card-text">Professional-grade electric drills offering precision drilling and driving capabilities for various materials with consistent power delivery.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Chuck sizes: 3/8" to 1/2"</li>
                                <li>• Variable speed trigger</li>
                                <li>• Hammer drill functionality</li>
                                <li>• Keyless chuck system</li>
                                <li>• LED work light</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">Precision</span>
                                <span class="badge bg-success">Variable Speed</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="200">
                        <img src="https://images.unsplash.com/photo-1609269034313-26ebda7a27b3?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Angle Grinders" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Angle Grinders</h5>
                            <p class="card-text">Heavy-duty angle grinders for cutting, grinding, and polishing applications with superior motor performance and safety features.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Disc sizes: 4" to 9"</li>
                                <li>• High-performance motors</li>
                                <li>• Tool-free guard adjustment</li>
                                <li>• Anti-vibration side handle</li>
                                <li>• Overload protection</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">Heavy Duty</span>
                                <span class="badge bg-success">Safety Features</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="300">
                        <img src="https://images.unsplash.com/photo-1603364948151-9355ae96e75c?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Circular Saws" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Circular Saws</h5>
                            <p class="card-text">Professional circular saws designed for accurate cuts in wood, metal, and composite materials with advanced blade technology.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Blade sizes: 7-1/4" to 10"</li>
                                <li>• Bevel cutting capability</li>
                                <li>• Laser guide systems</li>
                                <li>• Dust extraction ports</li>
                                <li>• Electric brake system</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">Precision Cutting</span>
                                <span class="badge bg-success">Laser Guide</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card product-card h-100" data-aos="fade-up" data-aos-delay="400">
                        <img src="https://images.unsplash.com/photo-1581092918056-0c4c3acd3789?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Impact Drivers" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">Impact Drivers</h5>
                            <p class="card-text">High-torque impact drivers for heavy-duty fastening applications with cordless convenience and extended battery life.</p>
                            <ul class="list-unstyled small text-muted mb-3">
                                <li>• Torque up to 1,800 in-lbs</li>
                                <li>• Brushless motor technology</li>
                                <li>• Quick-change hex chuck</li>
                                <li>• 18V/20V battery systems</li>
                                <li>• Compact ergonomic design</li>
                            </ul>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">High Torque</span>
                                <span class="badge bg-success">Cordless</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Features Section -->
            <div class="row mt-5">
                <div class="col-lg-12 text-center mb-4">
                    <h3>Why Choose Our Power Tools?</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="text-center">
                        <i class="fas fa-battery-full fa-3x text-primary mb-3"></i>
                        <h5>Long Battery Life</h5>
                        <p class="text-muted">Advanced lithium-ion technology provides extended runtime and quick charging capabilities.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="text-center">
                        <i class="fas fa-microchip fa-3x text-primary mb-3"></i>
                        <h5>Smart Technology</h5>
                        <p class="text-muted">Brushless motors and intelligent controls optimize performance and extend tool life.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="300">
                    <div class="text-center">
                        <i class="fas fa-user-shield fa-3x text-primary mb-3"></i>
                        <h5>Safety First</h5>
                        <p class="text-muted">Built-in safety features including overload protection and anti-kickback systems.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="400">
                    <div class="text-center">
                        <i class="fas fa-tools fa-3x text-primary mb-3"></i>
                        <h5>Versatile Platform</h5>
                        <p class="text-muted">Interchangeable battery systems work across multiple tools for maximum efficiency.</p>
                    </div>
                </div>
            </div>

            <!-- CTA Section -->
            <div class="row mt-5">
                <div class="col-lg-12 text-center">
                    <div class="bg-light p-5 rounded">
                        <h4>Ready to Upgrade Your Power Tools?</h4>
                        <p class="mb-4">Discover our complete range of professional power tools designed for maximum productivity and reliability.</p>
                        <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-phone me-2"></i>Get Quote
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Products" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>