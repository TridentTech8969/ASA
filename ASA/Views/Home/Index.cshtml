@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="hero-content" data-aos="fade-up" data-aos-duration="1000">
                    <h1 class="hero-title">Leading Manufacturing Solutions</h1>
                    <p class="hero-subtitle">Premium Industrial Tools & Equipment for Modern Manufacturing Excellence</p>
                    <a asp-area="" asp-controller="Home" asp-action="Products" class="btn-hero">
                        Explore Products <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5">
                <h2 class="section-title" data-aos="fade-up">Why Choose Us</h2>
                <p class="lead" data-aos="fade-up" data-aos-delay="100">
                    Excellence in manufacturing solutions with cutting-edge technology
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-cog fa-3x text-primary"></i>
                    </div>
                    <h4>Quality Manufacturing</h4>
                    <p class="text-muted">State-of-the-art manufacturing processes ensuring superior quality products for industrial applications.</p>
                </div>
            </div>
            <div class="col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-tools fa-3x text-primary"></i>
                    </div>
                    <h4>Professional Tools</h4>
                    <p class="text-muted">Comprehensive range of pneumatic, power, and cutting tools designed for professional use.</p>
                </div>
            </div>
            <div class="col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="300">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-headset fa-3x text-primary"></i>
                    </div>
                    <h4>Expert Support</h4>
                    <p class="text-muted">24/7 technical support and consultation for all your industrial manufacturing needs.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="section-padding bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="stat-item">
                    <h2 class="stat-number text-primary">25+</h2>
                    <p class="stat-label">Years Experience</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="stat-item">
                    <h2 class="stat-number text-primary">5000+</h2>
                    <p class="stat-label">Happy Clients</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="300">
                <div class="stat-item">
                    <h2 class="stat-number text-primary">500+</h2>
                    <p class="stat-label">Products</p>
                </div>
            </div>
            @* <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="400">
                <div class="stat-item">
                    <h2 class="stat-number text-primary">50+</h2>
                    <p class="stat-label">Countries Served</p>
                </div>
            </div> *@
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section-padding" style="background: #8b0f0f;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center text-white">
                <h2 class="mb-4" data-aos="fade-up">Ready to Get Started?</h2>
                <p class="lead mb-4" data-aos="fade-up" data-aos-delay="100">
                    Contact us today to discuss your industrial tool requirements and get the best solutions for your business.
                </p>
                <div data-aos="fade-up" data-aos-delay="200">
                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-light btn-lg px-5 me-3">
                        Get Quote
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Offers" class="btn btn-outline-light btn-lg px-5">
                        View Offers
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>